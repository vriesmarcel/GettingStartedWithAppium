<Window x:Class="CarvedRock.Wpf.ItemDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarvedRock.Wpf"
        mc:Ignorable="d"
        Title="Item Detail" Height="400" Width="400" AutomationProperties.Name="Item Detail">
    <Grid>
        <Label Content="Details" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="62,64,0,0" VerticalAlignment="Top" Width="285"/>
        <Label Content="Item" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="62,163,0,0" VerticalAlignment="Top"/>
        <Label Name="txtDetailText" AutomationProperties.AutomationId="txtDetailText" Content="{Binding Description}" HorizontalAlignment="Left" Margin="68,194,0,0" VerticalAlignment="Top" Height="29" Width="323"/>
        <Label x:Name="txtItemText" AutomationProperties.AutomationId="txtItemText" Content="{Binding Text}" HorizontalAlignment="Left" Margin="68,95,0,0" VerticalAlignment="Top" Height="24" Width="254"/>
        <Button Content="ok" AutomationProperties.AutomationId="ok" HorizontalAlignment="Left" Margin="68,248,0,0" VerticalAlignment="Top" Width="88" Height="33" Click="Button_Click"/>

    </Grid>
</Window>
