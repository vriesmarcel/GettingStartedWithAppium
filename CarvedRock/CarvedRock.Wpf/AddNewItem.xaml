<Window x:Class="CarvedRock.Wpf.AddNewItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarvedRock.Wpf"
        mc:Ignorable="d"
        Title="AddNewItem" Height="400" Width="400">
    <Grid>
        <Label Content="Item Text" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="62,64,0,0" VerticalAlignment="Top" Width="285"/>
        <Label Content="Item Detail" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="62,163,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDetailText"  HorizontalAlignment="Left" Margin="68,194,0,0" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Top" Height="30" Width="250"/>
        <TextBox x:Name="txtItemText" HorizontalAlignment="Left" Margin="68,95,0,0" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top" Height="30" Width="250"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="68,248,0,0" VerticalAlignment="Top" Width="88" Height="33" Click="Button_Click"/>

    </Grid>
</Window>
